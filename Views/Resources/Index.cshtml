@model IEnumerable<LearnHub.Models.Resource>
@{
    ViewData["Title"] = "Resources";
}

<h1>Learning Resources</h1>

<form method="get" class="row g-2 mb-3">
    <div class="col-sm-8">
        <input name="q" value="@ViewData["Query"]" class="form-control" placeholder="Search by title or description" />
    </div>
    <div class="col-sm-4">
        <button type="submit" class="btn btn-primary">Search</button>
        <a asp-action="Index" class="btn btn-outline-secondary">Reset</a>
    </div>
</form>

<div class="row g-3">
    @foreach (var item in Model)
    {
        <article class="col-md-6">
            <div class="card h-100">
                <div class="card-body">
                    <h2 class="h5">@item.Title</h2>
                    <p>@item.Description</p>
                    <p class="mb-1"><strong>Category:</strong> @item.Category?.Name</p>
                    <p class="mb-2"><strong>Level:</strong> @item.Level / 5</p>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary btn-sm">Details</a>
                </div>
            </div>
        </article>
    }
</div>
