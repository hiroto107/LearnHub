@model LearnHub.Models.Resource
@{
    ViewData["Title"] = "Resource Detail";
}

<article>
    <h1>@Model.Title</h1>
    <p>@Model.Description</p>
    <p><strong>Category:</strong> @Model.Category?.Name</p>
    <p><strong>Media Type:</strong> @Model.MediaType</p>
    <p><strong>Level:</strong> @Model.Level / 5</p>

    <p>
        <a href="@Model.Url" target="_blank" rel="noopener noreferrer" class="btn btn-primary">Open Resource</a>
        <a asp-action="Index" class="btn btn-outline-secondary">Back</a>
    </p>
</article>

@if (User.Identity?.IsAuthenticated == true)
{
    <form asp-controller="Member" asp-action="AddBookmark" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" name="resourceId" value="@Model.Id" />
        <button type="submit" class="btn btn-success">Add to My Bookmarks</button>
    </form>
}
